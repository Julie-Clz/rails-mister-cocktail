<div class="homepage">
  <div class="container">
  <h1>J&A Cocktails</h1>
    <br>
    <div class="but">
      <%= link_to "Add your own cocktail 🍸", new_cocktail_path, class: "btn btn-gradient" %>
    </div>
     <br>
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="card-category">
        <%= link_to cocktail.name.capitalize, cocktail_path(cocktail)  %>
        </div>
      <% end %>
    </div>
</div>
</div>
